{
  "manifest_version": 3,
  "name": "GMARK Local - Privacy-First Bookmark Manager",
  "version": "1.0.0",
  "description": "Klassifiziere, fasse zusammen und dedupliziere deine Bookmarks mit lokaler KI - 100% offline und privat",
  "permissions": [
    "storage",
    "bookmarks",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus",
    "omnibox"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "gm"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "GMARK Local",
    "default_icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "src/ui/options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/utils/page-reader.js", "src/config/categories.yml"],
      "matches": ["<all_urls>"]
    }
  ]
}
